<mapper namespace="kr.or.ddit.mybatis.mapper.JobGradeMapper">
	
	<select id="selectJobGeadeList" resultType="kr.or.ddit.vo.JobGradeVO">
		SELECT
			JBGD_CD
			, JBGD_NM
			, APPR_ATRZ_YN
			, CRT_DT
			, USE_YN
		FROM
			JOB_GRADE
	</select>
	
	
	<select id="selectJobGrade" resultType="kr.or.ddit.vo.JobGradeVO">
			SELECT
			JBGD_CD
			, JBGD_NM
			, APPR_ATRZ_YN
			, CRT_DT
			, USE_YN
		FROM
			JOB_GRADE
		WHERE
			JBGD_CD = #{jbgdCd}
	</select>
</mapper>