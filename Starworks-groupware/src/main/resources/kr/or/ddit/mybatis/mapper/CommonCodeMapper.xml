<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.ddit.mybatis.mapper.CommonCodeMapper">

<select id="selectCommonCodeList" resultType="kr.or.ddit.vo.CommonCodeVO">
	SELECT
		CODE_ID
		, CODE_GRP_ID
		, CODE_NM
		, USE_YN
	FROM
		COMMON_CODE
	WHERE 
		CODE_GRP_ID = #{codeGrpId}
</select>

<select id="selectCommonCode" resultType="kr.or.ddit.vo.CommonCodeVO">
	SELECT
		CODE_ID
		, CODE_GRP_ID
		, CODE_NM
		, USE_YN
	FROM
		COMMON_CODE
	WHERE 
		CODE_ID = #{codeId}
</select>

</mapper>