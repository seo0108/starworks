<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mybatis.mapper.MyPageMapper" >

	<update id="updateUserInfo" parameterType="kr.or.ddit.vo.UsersVO">
		UPDATE USERS
	        SET
	            USER_NM = #{userNm},
	            USER_TELNO = #{userTelno},
	            EXT_TEL= #{extTel},
	            USER_EMAIL = #{userEmail},
	            USER_IMG_FILE_ID =
	                CASE
	                    WHEN #{userImgFileId} IS NOT NULL THEN #{userImgFileId}
	                    ELSE USER_IMG_FILE_ID
	                END
	        WHERE USER_ID = #{userId}


	</update>
</mapper>