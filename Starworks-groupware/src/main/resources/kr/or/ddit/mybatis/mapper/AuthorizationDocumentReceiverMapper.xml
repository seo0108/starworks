<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mybatis.mapper.AuthorizationDocumentReceiverMapper">
	
	<insert id="insertAuthDocumentReceiver">
		INSERT INTO AUTHORIZATION_DOCUMENT_RECEIVER(
			ATRZ_DOC_ID
			,OPEN_YN
			,OPEN_DT
			,ATRZ_RCVR_ID
		)VALUES(
			#{atrzDocId}
			,#{openYn}
			,#{openDt}
			,#{atrzRcvrId}
		)
	</insert>
	
	<select id="selectAuthDocumentReceiverList" resultType="kr.or.ddit.vo.AuthorizationDocumentReceiverVO">
		SELECT
			ATRZ_DOC_ID
			,OPEN_YN
			,OPEN_DT
			,ATRZ_RCVR_ID
		FROM 
			AUTHORIZATION_DOCUMENT_RECEIVER
	
	</select>
	
	<select id="selectAuthDocumentReceiver" resultType="kr.or.ddit.vo.AuthorizationDocumentReceiverVO">
			SELECT
			ATRZ_DOC_ID
			,OPEN_YN
			,OPEN_DT
			,ATRZ_RCVR_ID
		FROM 
			AUTHORIZATION_DOCUMENT_RECEIVER
		WHERE
			ATRZ_DOC_ID=#{atrzDocId}
	</select>
	
</mapper>